<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp">

    <ImageView
        android:id="@+id/item_follow_profile_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_gray_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/item_follow_profile_tv"
        style="@style/tv_b_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="넷플릭스"
        app:layout_constraintStart_toEndOf="@id/item_follow_profile_iv"
        app:layout_constraintTop_toTopOf="@id/item_follow_profile_iv" />

    <TextView
        android:id="@+id/item_follow_id_tv"
        style="@style/tv_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\@Netflix"
        android:textColor="@color/blue_gray"
        app:layout_constraintStart_toStartOf="@id/item_follow_profile_tv"
        app:layout_constraintTop_toBottomOf="@id/item_follow_profile_tv" />

    <TextView
        android:id="@+id/item_follow_follow_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="팔로우"
        android:textColor="@color/white"
        style="@style/tv_b_14"
        android:paddingVertical="8dp"
        android:paddingHorizontal="30dp"
        android:background="@drawable/bg_black_round_btn"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_follow_profile_tv"/>

    <TextView
        android:id="@+id/item_follow_unfollow_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="팔로잉"
        style="@style/tv_b_14"
        android:paddingVertical="8dp"
        android:paddingHorizontal="30dp"
        android:background="@drawable/bg_check_not_selection"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_follow_profile_tv"/>

    <TextView
        android:id="@+id/item_follow_wait_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="승인 대기중"
        style="@style/tv_b_14"
        android:paddingVertical="8dp"
        android:paddingHorizontal="30dp"
        android:background="@drawable/bg_check_not_selection"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_follow_profile_tv"/>

</androidx.constraintlayout.widget.ConstraintLayout>