<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/mypage_collasp_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/back_image"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:src="@drawable/bg_blue_square"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <ImageView
                        android:id="@+id/mypage_profile_background_iv"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/bg_white_circle"
                        app:layout_constraintStart_toStartOf="@id/mypage_user_profile"
                        app:layout_constraintEnd_toEndOf="@id/mypage_user_profile"
                        app:layout_constraintTop_toTopOf="@id/mypage_user_profile"
                        app:layout_constraintBottom_toBottomOf="@id/mypage_user_profile"/>

                    <ImageView
                        android:id="@+id/mypage_user_profile"
                        android:layout_width="60dp"
                        android:layout_height="57dp"
                        android:layout_marginStart="26dp"
                        android:layout_marginTop="100dp"
                        android:background="@drawable/ic_user"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/mypage_user_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="넷플릭스"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/mypage_user_profile"
                        android:layout_marginStart="26dp"
                        android:layout_marginTop="10dp"
                        android:textSize="20dp"
                        style="@style/tv_b_16" />

                    <TextView
                        android:id="@+id/mypage_user_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\@netflix"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/mypage_user_nickname"
                        android:layout_marginStart="26dp"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:id="@+id/registration_date"
                        style="@style/tv_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:drawableLeft="@drawable/ic_mapping"
                        android:gravity="center"
                        android:text=" 대한민국"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/mypage_user_id"
                        android:layout_marginStart="26dp" />

                    <TextView
                        android:id="@+id/mypage_following_tv"
                        style="@style/tv_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="26dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text=" 1 팔로잉 0 팔로워"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/registration_date" />

                    <TextView
                        android:id="@+id/change_profile"
                        style="@style/tv_b_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="10dp"
                        android:background="@drawable/bg_check_not_selection"
                        android:text="프로필 수정"
                        android:textColor="@color/black"
                        android:layout_marginEnd="10dp"
                        app:layout_constraintBottom_toTopOf="@id/mypage_user_nickname"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf= "@id/mypage_following_tv"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.appbar.CollapsingToolbarLayout>


            <com.google.android.material.tabs.TabLayout
                android:id="@+id/mypage_tablayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:tabSelectedTextColor="@color/blue"
                app:tabIndicatorColor="@color/blue"
                app:layout_anchor="@+id/appbar"
                app:tabRippleColor="#00FF0000"
                app:layout_scrollFlags="enterAlways"
                app:layout_anchorGravity="center"
                android:elevation="10dp"/>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/mypage_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:layout_marginTop="10dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.constraintlayout.widget.ConstraintLayout>