<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top -->
    <View
        android:id="@+id/bookmark_top_v"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@drawable/bg_white_rectangle"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bookmark_title_tv"
        style="@style/tv_eb_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:elevation="10dp"
        android:text="북마크"
        app:layout_constraintBottom_toBottomOf="@id/bookmark_top_v"
        app:layout_constraintEnd_toEndOf="@id/bookmark_top_v"
        app:layout_constraintStart_toStartOf="@id/bookmark_top_v" />

    <ImageView
        android:id="@+id/bookmark_more_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:elevation="10dp"
        android:padding="10dp"
        android:src="@drawable/ic_more_black"
        app:layout_constraintBottom_toBottomOf="@id/bookmark_top_v"
        app:layout_constraintEnd_toEndOf="parent" />

    <!--  중간  -->
    <ImageView
        android:id="@+id/bookmark_default_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_bookmark"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/bookmark_top_v"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>