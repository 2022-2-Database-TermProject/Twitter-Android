<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top -->
    <View
        android:id="@+id/follow_detail_top_v"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@drawable/bg_white_rectangle"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/follow_detail_back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:elevation="10dp"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="@id/follow_detail_top_v"
        app:layout_constraintStart_toStartOf="@id/follow_detail_top_v"
        app:layout_constraintTop_toTopOf="@id/follow_detail_top_v" />

    <TextView
        android:id="@+id/follow_detail_nickname_tv"
        style="@style/tv_eb_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:text="유저"
        app:layout_constraintBottom_toBottomOf="@id/follow_detail_top_v"
        app:layout_constraintEnd_toEndOf="@id/follow_detail_top_v"
        app:layout_constraintStart_toStartOf="@id/follow_detail_top_v"
        app:layout_constraintTop_toTopOf="@id/follow_detail_top_v" />

    <!--  탭레이아웃  -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/follow_tablayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        app:layout_anchorGravity="center"
        app:layout_scrollFlags="enterAlways"
        app:tabIndicatorColor="@color/blue"
        app:tabRippleColor="#00FF0000"
        app:tabSelectedTextColor="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/follow_detail_top_v"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        app:layout_constraintTop_toBottomOf="@id/follow_detail_top_v"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        app:layout_constraintTop_toBottomOf="@id/follow_tablayout"/>

    <!--  뷰페이저   -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/follow_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/follow_tablayout"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>